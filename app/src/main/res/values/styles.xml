<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppTheme.Translucent" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppTheme.Translucent.Light" parent="AppTheme.Translucent">
        <item name="colorPrimary">@color/colorLTPrimary</item>
        <item name="colorPrimaryDark">@color/colorLTPrimaryDark</item>
        <item name="colorAccent">@color/colorLTAccent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="backgroundCardColor">@android:color/white</item>
        <item name="tintSecondary">@color/colorLTPrimary</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="botNavMenu">@xml/bot_nav_menu</item>
    </style>

    <style name="AppTheme.Translucent.Dark" parent="AppTheme.Translucent">
        <item name="colorPrimary">@color/colorDTPrimary</item>
        <item name="colorPrimaryDark">@color/colorDTPrimaryDark</item>
        <item name="colorAccent">@color/colorDTAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="tintSecondary">@android:color/white</item>
        <item name="backgroundCardColor">@color/colorDTPrimary</item>
        <item name="android:windowBackground">@color/colorDTPrimaryDark</item>
        <item name="botNavMenu">@xml/bot_nav_menu_dark</item>
    </style>

</resources>
